# Last9 OTLP Configuration
# Copy this file to .env and fill in your Last9 credentials

# Last9 OTLP endpoint
# Get this from your Last9 dashboard under Settings -> API Keys
LAST9_OTLP_ENDPOINT=https://otlp.last9.io:443

# Last9 authentication header
# Format: Basic <base64-encoded-username:password>
# Get your credentials from Last9 dashboard
LAST9_AUTH_HEADER=Basic <YOUR_BASE64_ENCODED_CREDENTIALS>

# AWS Configuration
# Region where your AWS resources are deployed
AWS_REGION=us-east-1

# AWS credentials (for local testing with LocalStack, use dummy values)
# For production, use IAM roles instead of access keys
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# LocalStack configuration (for local testing only)
# Set to http://localhost:4566 when testing locally
# Leave empty or remove for production use
AWS_ENDPOINT_URL=

# Service name for resource detection
OTEL_SERVICE_NAME=aws-cloudwatch-collector

# Resource attributes for additional context
OTEL_RESOURCE_ATTRIBUTES=deployment.environment=production,team=platform,customer=aha_chatbot
