# AWS Configuration
AWS_REGION=ap-south-1
AWS_PROFILE=default

# Lambda Function Configuration
FUNCTION_NAME=go-lambda-otel-test
LAMBDA_RUNTIME=provided.al2
LAMBDA_TIMEOUT=30
LAMBDA_MEMORY=256

# OpenTelemetry Configuration
OTEL_SERVICE_NAME=go-lambda-otel-example
OTEL_EXPORTER_OTLP_PROTOCOL=http/protobuf
OTEL_RESOURCE_ATTRIBUTES=deployment.environment=test
OTEL_TRACES_EXPORTER=otlp
OTEL_TRACES_SAMPLER=always_on
OTEL_PROPAGATORS=tracecontext,baggage,xray

# Last9 Configuration (Replace with your credentials)
OTEL_EXPORTER_OTLP_ENDPOINT=https://<YOUR_OTLP_ENDPOINT>:443
OTEL_EXPORTER_OTLP_HEADERS=authorization=Basic <your-base64-encoded-credentials>

# AWS OpenTelemetry Collector Layer ARN for ap-south-1 (Mumbai) - amd64
OTEL_LAYER_ARN=arn:aws:lambda:ap-south-1:901920570463:layer:aws-otel-collector-amd64-ver-0-117-0:1

# For ARM64 architecture, use:
# OTEL_LAYER_ARN=arn:aws:lambda:ap-south-1:901920570463:layer:aws-otel-collector-arm64-ver-0-117-0:1
