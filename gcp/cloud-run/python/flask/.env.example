# OpenTelemetry Configuration
OTEL_SERVICE_NAME=flask-cloud-run-demo
OTEL_EXPORTER_OTLP_ENDPOINT=https://otlp.last9.io
OTEL_EXPORTER_OTLP_HEADERS=Authorization=Basic YOUR_BASE64_CREDENTIALS
OTEL_TRACES_SAMPLER=always_on

# Application Configuration
SERVICE_VERSION=1.0.0
DEPLOYMENT_ENVIRONMENT=development
PORT=8080

# GCP Configuration (automatically set in Cloud Run)
# GOOGLE_CLOUD_PROJECT=your-project-id
# CLOUD_RUN_REGION=us-central1
# K_SERVICE=flask-otel-demo
# K_REVISION=flask-otel-demo-00001-abc

# Optional: Additional resource attributes
# OTEL_RESOURCE_ATTRIBUTES=team=backend,cost_center=engineering
